<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/myOrderItem_skipNotice"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView

            android:id="@+id/myOrderItem_title"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Sunny啊" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/myOrderItem_title"
            android:src="@mipmap/home_myself_right_arrow" />

        <TextView
            android:id="@+id/myOrderItem_payStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="代付款"
            android:textColor="#f91c32" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <ImageView
            android:id="@+id/myOrderItem_Image"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:src="@mipmap/looklive_land_stop_bg" />

        <TextView
            android:id="@+id/myOrderItem_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/myOrderItem_Image"
            android:text="体验开播  :"
            android:textColor="#c4c4c4" />

        <TextView
            android:id="@+id/myOrderItem_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/myOrderItem_one"
            android:text="2018" />

        <TextView
            android:id="@+id/myOrderItem_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myOrderItem_one"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/myOrderItem_Image"
            android:text="￥1730"
            android:textColor="#ffe134"
            android:textSize="16sp" />

        <Button
            android:id="@+id/myOrderItem_pay"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_bluetwo_bg"
            android:text="付款"
            android:textColor="#fff"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e9e9e9" />

</LinearLayout>
