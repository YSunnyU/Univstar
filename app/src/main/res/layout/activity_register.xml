<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sunny.univstar.view.personal.activity.RegisterActivity">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/register_return"
            android:src="@mipmap/register_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入手机号，快速注册"
            android:textColor="#303030"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_marginTop="56dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:singleLine="true"
                android:layout_weight="1"
                android:id="@+id/register_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="输入手机号"
                android:maxLength="11"
                android:numeric="integer"
                android:textColorHint="#A7A8AE"
                android:textCursorDrawable="@drawable/edit_cursor" />
            <ImageView
                android:layout_marginRight="35dp"
                android:visibility="invisible"
                android:id="@+id/phon_close"
                android:src="@mipmap/input_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#e9e9e9" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <EditText
                android:singleLine="true"
                android:id="@+id/register_phone_code"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:hint="输入验证码"
                android:maxLength="6"
                android:textColorHint="#A7A8AE"
                android:textCursorDrawable="@drawable/edit_cursor" />

            <TextView
                android:id="@+id/get_register_code"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:text="获取验证码"
                android:textColor="#5491FF" />

            <ImageView
                android:visibility="invisible"
                android:id="@+id/phone_code_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/get_register_code"
                android:src="@mipmap/input_close" />
        </RelativeLayout>

        <View
            android:background="#e9e9e9"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册表示你同意"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/univstar_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UnivStar服务使用协议"
                android:textColor="#303030"
                android:textSize="15sp" />

        </LinearLayout>

        <Button
            android:id="@+id/phone_register_btn"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/myself_btn_login"
            android:text="注册"
            android:textColor="#fff"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/weixin_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/weixin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信登陆" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/qq_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/qq" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QQ登陆" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/weibo_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/weibo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微博登陆" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
