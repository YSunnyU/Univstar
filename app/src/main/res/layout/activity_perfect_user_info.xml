<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.sunny.univstar.view.personal.activity.PerfectUserInfoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/perfect_info_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/register_return" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="完善信息"
            android:textColor="#303030" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="75dp"
        android:layout_height="75dp">
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/user_head_portrait"
            android:id="@+id/perfect_user_img" />
        <ImageView
            android:src="@mipmap/ic_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/perfect_user_img" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="56dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/perfect_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="输入昵称"
            android:singleLine="true"
            android:textColorHint="#A7A8AE"
            android:textCursorDrawable="@drawable/edit_cursor" />

        <ImageView
            android:id="@+id/perfect_user_name_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:src="@mipmap/input_close"
            android:visibility="invisible" />
    </LinearLayout>
    <View
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#e9e9e9" />
    <RadioGroup
        android:id="@+id/user_sex_group"
        android:layout_marginTop="56dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/user_sex_man"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/radio_check_man"
            android:text="  我是男神"
            android:textSize="18sp"
            android:button="@null"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
        <RadioButton
            android:id="@+id/user_sex_woman"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/radio_check_woman"
            android:text="我是女神"
            android:textSize="18sp"
            android:button="@null"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="56dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/perfect_user_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="输入密码"
            android:password="true"
            android:singleLine="true"
            android:textColorHint="#A7A8AE"
            android:textCursorDrawable="@drawable/edit_cursor" />

        <ImageView
            android:id="@+id/perfect_user_psw_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:src="@mipmap/input_close"
            android:visibility="invisible" />
    </LinearLayout>
    <View
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#e9e9e9" />
    <Button
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:id="@+id/user_perfect_yes"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/myself_btn_login"
        android:text="完成"
        android:textColor="#fff"
        android:textSize="16dp" />
</LinearLayout>
