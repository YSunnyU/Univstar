<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/notice_item_img"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/notice_classify"
            android:gravity="center"
            android:text="表演"
            android:textColor="#fff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/notice_item_time"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:background="#62000000"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="开课时间"
            android:textColor="#ffffff"
            android:textSize="13sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal"
        android:weightSum="4.2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/notice_item_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="地址"
                android:textColor="#222"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="已预约："
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/notice_reservation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="/"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/notice_subscribe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_weight="1.2"
            android:background="#fff"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="¥"
                android:textColor="#333"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/notice_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="128.0"
                android:textColor="#ff9500"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:background="#efefef"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
</LinearLayout>