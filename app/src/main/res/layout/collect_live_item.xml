<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp">

        <TextView
            android:visibility="gone"
            android:id="@+id/collectLiveItem_type"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/notice_classify"
            android:gravity="center"
            android:text="表演"
            android:textColor="#fff"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/collectLiveItem_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/collectLiveItem_image"
            android:layout_marginTop="-30dp"
            android:background="#62000000">

            <TextView
                android:id="@+id/collectLiveItem_startTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="尅可时间"
                android:textColor="#fff" />
        </RelativeLayout>


        <Button
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="#62000000"
            android:text="重播"
            android:textColor="#fff" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/collectLiveItem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="李冉冉"
            android:textColor="#000"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/collectLiveItem_vip_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/collectLiveItem_name"
            android:src="@mipmap/home_level_vip_red" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="30dp">

        <TextView
            android:id="@+id/collectLiveItem_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.5dp"
            android:text="已预约："
            android:textColor="#939393"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/collectLiveItem_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerVertical="true"
            android:layout_marginLeft="300dp"
            android:text="￥" />

        <TextView
            android:id="@+id/collectLiveItem_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/collectLiveItem_one"
            android:text="3243"
            android:textColor="#fffc3f"
            android:textSize="16sp" />
    </RelativeLayout>


</LinearLayout>
